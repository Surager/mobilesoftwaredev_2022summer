<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e5e5e5"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#fff"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@mipmap/icon_pengyou"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                >
            </ImageView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textColor="#333"
                android:textSize="18dp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:text="朋友圈"
                >
            </TextView>

            <ImageView
                android:layout_marginRight="15dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#fff"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@mipmap/scan"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    >
                </ImageView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:textSize="18dp"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="扫一扫"
                    >
                </TextView>

                <ImageView
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </ImageView>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#fff"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@mipmap/shake"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    >
                </ImageView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:textSize="18dp"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="摇一摇"
                    >
                </TextView>

                <ImageView
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </ImageView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#fff"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@mipmap/look"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    >
                </ImageView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:textSize="18dp"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="看一看"
                    >
                </TextView>

                <ImageView
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </ImageView>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#fff"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@mipmap/search"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    >
                </ImageView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:textSize="18dp"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="搜一搜"
                    >
                </TextView>

                <ImageView
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </ImageView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#fff"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@mipmap/shop"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    >
                </ImageView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:textSize="18dp"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="购物"
                    >
                </TextView>

                <ImageView
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </ImageView>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#fff"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@mipmap/game"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    >
                </ImageView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:textSize="18dp"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="游戏"
                    >
                </TextView>

                <ImageView
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </ImageView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#fff"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@mipmap/xiaochengxu"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                >
            </ImageView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textColor="#333"
                android:textSize="18dp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:text="小程序"
                >
            </TextView>

            <ImageView
                android:layout_marginRight="15dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </ImageView>

        </LinearLayout>





    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>